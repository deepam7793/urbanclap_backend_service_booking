{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",

    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
